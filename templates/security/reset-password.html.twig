{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/resetPassword.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Modification du mot de passe</h1>


        <div class="card">
            {{ form_start(form) }}

            {{ form_row(form.password) }}
            <div class="error-message">{{ form_errors(form.password) }}</div>

            <div class="d-flex justify-content-end m-4">
                <button type="submit" class="btn btn-success">Modifier</button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}