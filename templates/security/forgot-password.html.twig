{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Réinitialisation du mot de passe</h1>


        {% if app.session.flashBag.has('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ app.session.flashBag.get('danger')|first }}
            </div>
        {% elseif app.session.flashBag.has('success') %}
            <div class="alert alert-success" role="alert">
                {{ app.session.flashBag.get('success')|first }}
            </div>
        {% endif %}

        <div class="card p-5">
            <form method="post">
                <div class="form-group">
                    <label for="email">Adresse e-mail :</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success mt-5">Envoyer le lien de réinitialisation</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
