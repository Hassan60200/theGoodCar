{% extends 'base.html.twig' %}

{% block title %}Ajout d'une voiture{% endblock %}

{% block body %}
    <div class="container" {{ stimulus_controller('autocomplete', {url: path('app_car_autocomplete_model')}) }}>
        <h1 class="text-center my-5">Ajouter une voiture</h1>
        <div class="card p-5">

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.brand) }}
                        {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label> Modèle de la voiture </label>
                        {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
                        <ul data-autocomplete-target="result"></ul>
                    </div>
                </div>
            </div>
            <div class="row" {{ stimulus_controller('autocomplete', {url: path('app_car_autocomplete_departement')}) }}>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.region) }}
                        {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4" >
                    <div class="form-group">
                        <label>Département de la voiture</label>
                        <select class="form-control" name="departement" id="car_departement" data-autocomplete-target="resultDep"></select>
                    </div>
                </div>
                <div class="col-md-4" {{ stimulus_controller('autocomplete', {url: path('app_car_autocomplete_city')}) }}>
                    <div class="form-group">
                        {{ form_label(form.city) }}
                        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                        <ul data-autocomplete-target="resultCity"></ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.color) }}
                        {{ form_widget(form.color, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.price) }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.fuelType) }}
                        {{ form_widget(form.fuelType, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.mileage) }}
                        {{ form_widget(form.mileage, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.years) }}
                        {{ form_widget(form.years, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        {{ form_label(form.imageFile) }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <a href="{{ path('app_car_index') }}" class="btn btn-danger">Retour</a>
                <button class="btn btn-success">Créer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
